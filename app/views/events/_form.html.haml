= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :location
    = f.text_field :location
  .field
    = f.label :latitude
    = f.text_field :latitude
  .field
    = f.label :longitude
    = f.text_field :longitude
  .field
    = f.label :start_time
    = f.datetime_select :start_time
  .field
    = f.label :end_time
    = f.datetime_select :end_time
  .field
    = f.label :is_free
    = f.check_box :is_free
  .field
    = f.label :capacity
    = f.number_field :capacity
  .field
    = f.label :sold_out
    = f.check_box :sold_out
  .field
    = f.label :public
    = f.check_box :public
  .field
    = f.label :category
    = f.text_field :category
  .field
    = f.label :account
    = f.text_field :account
  .actions
    = f.submit 'Save'
