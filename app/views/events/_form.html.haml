.row
  .col-lg-7
    %section.panel
      = form_for @event do |f|
        - if @event.errors.any?
          #error_explanation
            %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
            %ul
              - @event.errors.full_messages.each do |msg|
                %li= msg

        .field
          = f.label :name
          = f.text_field :name, class: "form-control"
        .field
          = f.label :description
          = f.text_area :description, class: "form-control"
        .field
          = f.label :category
          = f.text_field :category, class: "form-control"
        .field
          = f.label :location
          = f.text_field :location, class: "form-control"
        .row
          .col-lg-6
            .field
              = f.label :start_time
              = f.text_field :start_time, class: "form-control"
          .col-lg-6
            .field
              = f.label :end_time
              = f.text_field :end_time, class: "form-control"
        .field
          = f.label :is_free
          = f.check_box :is_free
        .field
          = f.label :capacity
          = f.number_field :capacity
        .field
          = f.label :public
          = f.check_box :public
        .field
          = f.label :account
          = f.text_field :account, class: "form-control"
        .actions
          = f.submit 'Save'
  .col-lg-5